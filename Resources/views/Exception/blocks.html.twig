{% block standard404Errorpage %}
    {{  block('standardExceptionPage') }}
{% endblock %}

{% block standard500Errorpage %}
    {{  block('standardExceptionPage') }}
{% endblock %}

{% block standard403Errorpage %}
    {{  block('standardExceptionPage') }}
{% endblock %}

{% block standardExceptionPage %}
    <h1>{{ "title"|trans }}</h1>
    <h3 class="h3">{{ ("error." ~ exception.getStatusCode ~ ".title")|trans }} ({{ exception.getStatusCode }})</h3>
    <p>{{ ("error." ~ exception.getStatusCode ~ ".description")|trans|nl2br }}</p>
    {{ block('standardAlternatives') }}
    {{ block('sorryText') }}
{% endblock %}

{% block standardAlternatives %}
    <h2>{{ "alternatives.title"|trans }}</h2>
    <p>{{ "alternatives.description"|trans }}</p>
    <ul class="bulleted">
        <li>{{ block('actionBack') }}</li>
        <li>{{ block('actionZurStartseiteWechseln') }}</li>
        <li>{{ block('actionGoogleSearch') }}</li>
        <li>{{ block('actionKontaktAufnehmen') }}</li>
    </ul>
{% endblock %}

{% block actionBack %}
    {% set link %}<a href="#" onclick="window.history.back(); return false;">{% endset %}
    {% set endlink %}</a>{% endset %}
    {{ "alternatives.action.back"|trans({'%link%':link, '%endlink%': endlink})|raw }}
{% endblock %}

{% block actionZurStartseiteWechseln %}
    {% set link %}<a href="{{ startseitenUrl | default('/') }}">{% endset %}
    {% set endlink %}</a>{% endset %}
    {{ "alternatives.action.start"|trans({'%link%':link, '%endlink%': endlink})|raw }}
{% endblock %}

{% block actionGoogleSearch %}
    {{ "alternatives.action.search"|trans }}
    <form method="get" action="http://www.google.com/search" onsubmit="document.getElementById('search-query').value += ' site:' + document.domain;">
        <fieldset><input type="text" name="q" id="search-query" /><button type="submit" class="button">{{ "search"|trans }}</button></fieldset>
    </form>
{% endblock %}

{% block actionKontaktAufnehmen %}
    {% set link %}<a href="{{ impressumUrl | default('/impressum') }}">{% endset %}
    {% set endlink %}</a>{% endset %}
    {{ "alternatives.action.contact"|trans({'%link%':link, '%endlink%': endlink})|raw }}
{% endblock %}

{% block sorryText %}
    <h3 class="h3">{{ "sorryText"|trans }}</h3>
{% endblock %}
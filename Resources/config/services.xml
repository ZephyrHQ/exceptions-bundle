<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="webfactory.exceptions.twig_extension.class">Webfactory\Bundle\ExceptionsBundle\Twig\Extension</parameter>
    </parameters>

    <services>

        <service id="webfactory.exceptions.twig_extension"
            class="%webfactory.exceptions.twig_extension.class%"
            public="false"
        >
            <argument>%webfactory_exceptions.bundlename%</argument>
            <tag name="twig.extension" />
        </service>
    </services>
</container>
